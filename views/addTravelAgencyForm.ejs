      <div class="container">
        <table class="table table-bordered">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Agency Id</th>
              <th scope="col">Agency Name</th>
              <th scope="col">Location</th>
              <th scope="col">Contact Mail</th>
              <th scope="col">Contact Number</th>
              <th scope="col"></th>
            </tr>
          </thead>


          <tbody id="list_table">
            <% for(let i=0;i<data.length;i++){ %>
              <tr>
                <th class="agencyId"><%= data[i].agency_id %></th>
                <th class="agencyName"><%= data[i].agency_name %></th>
                <th class="location"><%= data[i].location %></th>
                <th class="mail"><%= data[i].email %></th>
                <th class="number"><%= data[i].contact_number %></th>
                <td><button class="gfgselect btn-secondary" data-toggle="modal" data-target="#staticBackdrop">EDIT</button></td>
              </tr>
            <% } %>
          </tbody>
        </table>

        <div class="button">
            <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#StaticBackdrop"  style="width: 200%;" >Add Agency</button>
        </div>
      </div>


      <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Update or Delete Details</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
            <div class="modal-body">
              <div class="Container">

                <form action="/updateAgency" method="POST">
                    <div class="form-group row">
                      <label for="Date" class="col-sm-4 col-form-label">Agency Id</label>
                      <div class="col-sm-8">
                        <input type="text" readonly class=" form-control" name="agencyId" id="AgencyId">
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="emp_id" class="col-sm-4 col-form-label">Agency Name</label>
                      <div class="col-sm-8">
                        <input type="text" class="form-control" name="agencyName" id="AgencyName" required >
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="from" class="col-sm-4 col-form-label">Location</label>
                      <div class="col-sm-8">
                        <input type="text"  class="form-control" name="location" id="Location" required>
                      </div>
                    </div>


                    <div class="form-group row">
                      <label for="to" class="col-sm-4 col-form-label">Contact Mail</label>
                      <div class="col-sm-8">
                        <input type="email" class="form-control" name="mail" id="Mail" required>
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="noOfDays" class="col-sm-4 col-form-label">Contact Number</label>
                      <div class="col-sm-8">
                        <input type="tel"  class="form-control" name="number" id="Number" required>
                      </div>
                    </div>

                
              </div>
            </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-secondary" onclick="update()" style="width: 20%;">Update</button>
          </div>
        </form>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger"data-toggle="modal" data-target="#Backdrop" style="width: 20%;margin-right: 30px;">Delete</button>
          </div>
        </form>
        </div>
      </div>
    </div>


      
    <!-- Modal -->
<div class="modal fade" id="Backdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <br>
        <h5 class="modal-title" id="staticBackdropLabel">Are you sure you want to delete this data?</h5>
        <br>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" style="width: 10%;">NO</button>
          <form id="delete"  method="POST">
            <button type="submit" class="btn btn-danger" style="width: 130%;">YES</button>
          </form>
      </div>
    </div>
  </div>
</div>


       <!-- Modal -->
  <div class="modal fade" id="StaticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Add New Travel Agency</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
            <div class="modal-body">
              <div class="Container">

                <form action="/addAgency" method="POST">
                  <div class="form-group row">
                    <label for="Date" class="col-sm-4 col-form-label">Agency Id</label>
                    <div class="col-sm-8">
                      <input type="text" readonly class=" form-control" name="agencyId" id="AgencyId">
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="emp_id" class="col-sm-4 col-form-label">Agency Name</label>
                    <div class="col-sm-8">
                      <input autocomplete="false" type="text" class="form-control" name="agencyName" id="AgencyName" required >
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="from" class="col-sm-4 col-form-label">Location</label>
                    <div class="col-sm-8">
                      <input autocomplete="false" type="text"  class="form-control" name="location" id="Location" required>
                    </div>
                  </div>


                  <div class="form-group row">
                    <label for="to" class="col-sm-4 col-form-label">Contact Mail</label>
                    <div class="col-sm-8">
                      <input autocomplete="false" type="email" class="form-control" name="mail" id="Mail" required>
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="noOfDays" class="col-sm-4 col-form-label">Contact Number</label>
                    <div class="col-sm-8">
                      <input  type="tel"  class="form-control" name="number" id="Number" required>
                    </div>
                  </div>

               
              </div>
            </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-secondary" onclick="submit()">Submit</button>
          </div>
        </form>
        </div>
      </div>
    </div>

    <script>
            $(function () { 
      // ON SELECTING ROW 
      $(".gfgselect").click(function () { 
//FINDING ELEMENTS OF ROWS AND STORING THEM IN VARIABLES 
          var agencyId = $(this).parents("tr").find(".agencyId").text(); 
          var agencyName = $(this).parents("tr").find(".agencyName").text(); 
          var location = $(this).parents("tr").find(".location").text(); 
          var mail =  $(this).parents("tr").find(".mail").text(); 
          var number = $(this).parents("tr").find(".number").text(); 

          console.log(agencyId + agencyName + location);
   
              document.getElementById("AgencyId").value = agencyId;
              document.getElementById("AgencyName").value = agencyName;
              document.getElementById("Location").value = location;
              document.getElementById("Mail").value = mail;
              document.getElementById("Number").value = number;
              
              document.getElementById("delete").setAttribute("action","/agencydelete/"+agencyId+"");
      });
});

        
function submit() {
            alert("MESSAGE FROM TRAVEL SERVICE" + "\n" + "\n" + "New Travel Agency was added Sucessfully");
          }

          function update() {
            alert("MESSAGE FROM TRAVEL SERVICE" + "\n" + "\n" + "Travel Agency data was updated ");
          }

           
    </script>



