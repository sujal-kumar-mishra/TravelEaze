            <div class="row">

              <% if(tours.length == 0) { %>
                <h2 style="text-align: center;">Sorry... No Packages Found</h2>
              <% }else { %>
              <% for(let i=0; i<tours.length; i++){ %>
                <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="height: 600px;">
                  <!-- C:\Users\athis\Desktop\Travel-agency-project-main\public\images\Tour_Images -->
                 <!--   <img  class="bd-placeholder-img card-img-top" width="100%" height="225" 
                                        src="/images/Tour_Images/<%= tours[i].images %>" alt="<%= tours[i].images %>">-->
                    <div class="card-body text-center">
                        <h1 class="card-title pricing-card-title"> <small class="text-muted">&#8377</small> 
                                      <%= tours[i].price %> <small class="text-muted"></small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                        <li>Destination : <%= tours[i].source %></li>
                        <li> Days : <%= tours[i].no_of_days %></li>
                        <li> Nights : <%= tours[i].no_of_nights %></li>
                        <li>Seats Available : <%= tours[i].seats_available %></li>
                        <li class="date">Date of Journey : <%= tours[i].start_date %></li>
                        <span class="" id="description"> <%= tours[i].description %></span>
                        </ul>
                            <!-- <button type="button" class="gfgselect btn  float-left btn-secondary" data-toggle="modal" data-target="#exampleModal" style="width: 40%;">View</button> -->
                            <form action="/tour_booking/<%= tours[i].tour_id %>" method="POST">
                              <button type="submit" class="btn  btn-primary" onclick="book()"  style="width: 40%;">Book</button>
                            </form>
                    </div>
                </div>
                </div>
                <% } %>
            <% } %>
               
