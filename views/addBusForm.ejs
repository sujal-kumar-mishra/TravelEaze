              </div>
            </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-secondary" onclick="submit()">Submit</button>
          </div>
        </form>
        </div>
      </div>
    </div>

  <script>
    $(function () { 
      // ON SELECTING ROW 
      $(".gfgselect").click(function () { 
          //FINDING ELEMENTS OF ROWS AND STORING THEM IN VARIABLES 
          var busNo = $(this).parents("tr").find(".busId").text(); 
          var source = $(this).parents("tr").find(".source").text(); 
          var departureTime = $(this).parents("tr").find(".departureTime").text(); 
          var destination = $(this).parents("tr").find(".destination").text(); 
          var arrivalTime =  $(this).parents("tr").find(".arrivalTime").text(); 
          var price = $(this).parents("tr").find(".price").text(); 
          var agencyId = $(this).parents("tr").find(".agencyName").text(); 
          var seatsAvailable = $(this).parents("tr").find(".seatsAvailable").text(); 

          //console.log(busNo+source+departureTime+destination+arrivalTime+price+agencyId);

            document.getElementById("BusNo").value = busNo;
            document.getElementById("Source").value = source;
            document.getElementById("DepartureTime").value = departureTime;
            document.getElementById("Destination").value = destination;
            document.getElementById("ArrivalTime").value = arrivalTime;
            document.getElementById("Price").value = price;
            document.getElementById("AgencyId").value = agencyId;
            document.getElementById("SeatsAvailable").value = seatsAvailable;

            document.getElementById("delete").setAttribute("action","/busdelete/"+busNo+"");
              });
          });

          function submit() {
            console.log("inside submit");
            alert("MESSAGE FROM TRAVEL SERVICE" + "\n" + "\n" + "New Bus was added Sucessfully");
          }

          function update() {
            alert("MESSAGE FROM TRAVEL SERVICE" + "\n" + "\n" + "Bus data was updated ");
          }

      
    </script>



