      <div class="container">
        <table class="table table-bordered">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Bus No</th>
              <th scope="col">Agency Name</th>
              <th scope="col">Source</th>
              <th scope="col">Departure Time</th>
              <th scope="col">Destination</th>
              <th scope="col">Arrival Time</th>
              <th scope="col">Price</th>
              <th scope="col">Seats Available</th>
              <th scope="col"></th>
            </tr>
          </thead>


          <tbody id="table_to_highlight">
            <% for(let i=0;i<data.length;i++){ %>
              <tr>
                <th class="busId"><%= data[i].bus_number %></th>
                <th class="agencyId" style="display: none"><%= data[i].agency_id %></th>
                <th class="agencyName"><%= data[i].agency_name %></th>
                <th class="source"><%= data[i].source %></th>
                <th class="departureTime"><%= data[i].departure_time %></th>
                <th class="destination"><%= data[i].destination %></th>
                <th class="arrivalTime"><%= data[i].arrival_time %></th>
                <th class="price"><%= data[i].fare %></th>
                <th class="seatsAvailable"><%= data[i].seats_available %></th>
                <th><button class="gfgselect btn-secondary" data-toggle="modal" data-target="#staticBackdrop">EDIT</button></th>
              </tr>
            <% } %>
          </tbody>
        </table>

        <div class="button">
            <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#StaticBackdrop"  style="width: 200%;" >Add New Bus</button>
        </div>
      </div>


      <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Edit Details</h5>
