<!DOCTYPE html>
<html>
<head>
	<title>SignUp and Login</title>
	<link rel="stylesheet"  href="css/userLogin.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

<div class="container" id="container">
<div class="form-container sign-up-container">
 <form action="/register" method="POST">
	<h1>Create an Account</h1>
	<!-- <div class="social-container">
		
	</div> -->
	<span> Enter your details for registration</span>
    <input autocomplete="false" type="text" name="firstName" placeholder="First Name" required>
    <input autocomplete="false" type="text" name="lastName" placeholder="Last Name">
	<input autocomplete="false" type="email" name="email" placeholder="Email" required>
	<input autocomplete="false" type="password" name="password" placeholder="Password"  minlength="8" required>
	<span>(password should consist of min 8 characters)</span>
	<input autocomplete="false" type="tel" name="phoneNumber" placeholder="Contact Number" pattern="[0-9]{10}" required>
	<span>(contact number should consist of 10 numbers)</span>
	<br>
	<span style="color: red;"><%= message %></span>
	<button type="submit" >Sign up</button>
</form>
</div>
<div class="form-container sign-in-container">
	<form action="/login" method="POST">
		<h1>Sign In</h1>
		 <!-- <div class="social-container">
		<a href="#" class="social"><i class="fa fa-facebook"></i></a>
		<a href="#" class="social"><i class="fa fa-google"></i></a>
		<a href="#" class="social"><i class="fa fa-linkedin"></i></a>
	</div>  -->
	<span> Use your account to login</span>
	<input autocomplete="false" type="email" name="email" placeholder="Email" required>
	<input autocomplete="false" type="password" name="password" placeholder="Password" required>
	<br>
	<span style="color: red;"><%= message %></span>
	<br>
	<button type="submit">Sign In</button>
	</form>
</div>
<div class="overlay-container">
	<div class="overlay">
		<div class="overlay-panel overlay-left">
			<h1>Welcome Back!</h1>
			<p>Already have an account?? Please login with the details</p>
			<button class="ghost" id="signIn">Sign In</button>
		</div>
		<div class="overlay-panel overlay-right">
			<h1>Travel Services</h1>
			<p>Hello!! Create an account and start your journey with us</p>
			<button class="ghost" id="signUp">Sign Up</button>
		</div>
	</div>
</div>
</div>

<script type="text/javascript">
	const signUpButton = document.getElementById('signUp');
	const signInButton = document.getElementById('signIn');
	const container = document.getElementById('container');

	signUpButton.addEventListener('click', () => {
		container.classList.add("right-panel-active");
	});
	signInButton.addEventListener('click', () => {
		container.classList.remove("right-panel-active");
	});
</script>


</body>
</html>