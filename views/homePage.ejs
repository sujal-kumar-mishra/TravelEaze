<html>

<head>
    <title>Global Travels</title>
    <script src="functions.js"></script>
    <link rel="stylesheet" href="css/homePage.css">
    <link rel="stylesheet" 
        href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" 
        content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" 
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>

    <body>

            <!-- navbar -->
        <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-light">
            <a class="navbar-brand" href="#">Travel Services</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
              <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item ">
                  <a class="nav-link" href="/bookTickets">Book Tickets</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="/bookTours">Explore Tour Packages</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="/viewTickets/<%= userData %>">View Booked Tickets</a>
                </li>
              </ul>
              <form action="/" class="form-inline my-2 my-lg-0">
                  <!-- <h4 style="padding:3px 20px 0px 0px">Hai user</h4> -->
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Log Out</button>
              </form>
            </div>
          </nav>

            <!-- carousal -->
        <section class="header" style="background-image:url('images/slide.jpg') ; padding-top: 70px;">
            <div class="container">
                <img src="images/logo.png">
                <p class="login-btn">Hello <%= username %></p>
                <!-- <button type="button" class="login-btn">Hello <%= username %></button> -->
            </div>
            <h1>TravelEase - Travel across the Globe</h1>
            <p>Be adventurous! Follow the Passion</p>

        </section>

        <!-- card collection -->
        <section class="features">
            <h1>Featured Destinations</h1>
            <div class="container">
                <div class="row">



                    <% for(let i=0;i<tours.length; i++){ %>
                        <div class="col-md-4">
                            <div class="feature-box"  style="height: 450px;">
                                <div class="feature-img">
                                    <img height="225" src="images/Tour_Images/<%= tours[i].images %>">
                                    <div class="price">
                                        <p>&#8377 <%= tours[i].price %></p>
                                    </div>
                                    <% if(i==0){ %>
                                        <div class="rating">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star-half-o"></i>
                                        </div>
                                    <% } %>
                                    <% if(i==1){ %>
                                        <div class="rating">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star-o"></i>
                                        </div>
                                    <% } %>
                                    <% if(i==2){ %>
                                        <div class="rating">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star-half-o"></i>
                                            <i class="fa fa-star-o"></i>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="feature-details">
                                    <h4><%= tours[i].source %></h4>
                                    <p><%= tours[i].description %></p>
                                    <span><i class="fa fa-map-marker"></i><%= tours[i].source %></span>
                                    <span><i class="fa fa-sun-o"></i><%= tours[i].no_of_days %> Days</span>
                                    <span><i class="fa fa-moon-o"></i><%= tours[i].no_of_nights %> Nights</span>
                                </div>
                            </div>
                        </div>
                    <% } %>










                </div>
            </div>
        </section>

        <section class="gallery">
            <h1>Traveller's Gallery</h1>
            <div class="container">
                <div class="row">

                    <div class="col-md-3">
                        <div class="gallery-box">
                            <img height="200" src="images/palace1.jpg">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="gallery-box">
                            <img height="200" src="images/coorg.jpg">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="gallery-box">
                            <img height="200" src="images/ckm.jpg">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="gallery-box" >
                            <img height="200" src="images/ooty.jpg">
                        </div>
                    </div>

                </div>
            </div>
        </section>

        <section class="banner" style="background-image: url('images/slide.jpg');">
            <div class="banner-highlights">
                <div class="container">
                    <div class="row">
                         <div class="col-md-8">
                            <h2>Be a Lucky Winner and get 75% off on Top Destinations</h2>
                            <p>Book your tickets before 31st march and avail exiting Prizes</p>
                        </div>
                        <!-- <div class="col-md-4">
                            <button type="button" class="booking-btn">Book Now</button>
                        </div> -->
                    </div>
                </div>
            </div>
        </section>

        <!-- feedback collection -->
        <section class="users-feedback">
            <h1>User Reviews</h1>
            <div class="container">
                <div class="row">

                    <div class="col-md-4">
                        <div class="user-review">
                            <p>This is the best website to book tickets and it is user friendly too.</p>
                            <h5>Anil Parashuram Hatti</h5>
                            <small>Dharwad</small>
                        </div>
                        <img src="images/icon.jpg">
                    </div>

                    <div class="col-md-4">
                        <div class="user-review">
                            <p>Nice site. The employees here are so cool.</p>
                            <h5>Punith Sarathi</h5>
                            <small>Mandya</small>
                        </div>
                        <img src="images/Punith.jpeg">
                    </div>

                    <div class="col-md-4">
                        <div class="user-review" style="height: 225px;">
                            <p>I really love this website. Good work guys. Keep it up!</p>
                            <h5>Abhi S B</h5>
                            <small>Ballari</small>
                        </div>
                        <img src="images/icon.jpg">
                    </div>

                </div>
            </div>
        </section>

        <!-- baisc footer -->
        <section class="footer">
            <div class="container">
                <div class="row">

                    <div class="col-md-3">
                        <img src="images/logo.png" class="footer-logo">
                        <p class="no-point">Travel Services Database<br>Management System<br>DBMS Mini Project</p>
                    </div>

                    <div class="col-md-3">
                        <h4>Features</h4>
                        <p>Deals & offers</p>
                        <p>Customer Reviews</p>
                        <p>Cancellation Policy</p>
                    </div>

                    <div class="col-md-3">
                        <h4>Quick Contact</h4>
                        <p><a href="tel:+919449283794"><i class="fa fa-phone-square"></i></a>
                            +91 9449 283794</p>
                        <p><a href="mailto:travelservice@gmail.com"><i class="fa fa-envelope"></i></a>travelservice@gmail.com</p>
                        <p><i class="fa fa-home"></i>2nd Cross, Richmond Circle, Bengaluru 560 001</p>
                    </div>

                    <div class="col-md-3">
                        <h4>Follow Us on</h4>
                        <p><a href="https://www.facebook.com/"><i class="fa fa-facebook-official"></i></a>Facebook</p>
                        <p><a href="https://www.youtube.com/"><i class="fa fa-youtube"></i></a>Youtube</p>
                        <p><a href="https://twitter.com/"><i class="fa fa-twitter"></i></a>Twitter</p>
                    </div>

                </div>
                <hr>
                <p class="copyright">By Team-Anil and Punith<i class="fa fa-paper-plane-o"></i></p>
            </div>
        </section>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

    </body>

</html>