            </tr>
          </thead>


          <tbody id="list_table">
            <% for(let i=0;i<data.length;i++){ %>
              <tr>
                <th class="tourId"><%= data[i].tour_id %></th>
                <th class="from"><%= data[i].source %></th>
                <th class="extra"><%= data[i].start_date %></th>
                <th class="startsOn" style="display: none"><%= data[i].extra %></th>
                <th class="placeIncluded"><%= data[i].places %></th>
                <th class="description"><%= data[i].description %></th>
               
                <th class="noOfDays"><%= data[i].no_of_days %></th>
                <th class="noOfNights"><%= data[i].no_of_nights %></th>
                <th class="price"><%= data[i].price %></th>
                <th class="seatsAvailable"><%= data[i].seats_available %></th>
                <th><button class="gfgselect btn-secondary" data-toggle="modal" data-target="#staticBackdrop">EDIT</button></th>
              </tr>
            <% } %>
          </tbody>

        </table>

        <div class="button">
            <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#StaticBackdrop" style="width: 200%;" >Add New Tour</button>
