    <script>

      $(function() {
        $(".gfgselect").click(function() {
          var tourId = $(this).parents("tr").find(".tourId").text();
          var from = $(this).parents("tr").find(".from").text();
          var startsOn = $(this).parents("tr").find(".startsOn").text();
          var placeIncluded = $(this).parents("tr").find(".placeIncluded").text();
          var description = $(this).parents("tr").find(".description").text();
          
          var noOfDays = $(this).parents("tr").find(".noOfDays").text();
          var noOfNights = $(this).parents("tr").find(".noOfNights").text();
          var price = $(this).parents("tr").find(".price").text();
          var seatsAvailable = $(this).parents("tr").find(".seatsAvailable").text();
          
          document.getElementById("TourId").value = tourId;
          document.getElementById("From").value = from;
          document.getElementById("StartsOn").value = startsOn;
          document.getElementById("PlaceIncluded").value = placeIncluded;
          document.getElementById("Description").value = description;
          
          document.getElementById("NoOfDays").value = noOfDays;
          document.getElementById("NoOfNights").value = noOfNights;
          document.getElementById("Price").value = price;
          document.getElementById("SeatsAvailable").value = seatsAvailable;

          document.getElementById("delete").setAttribute("action","/tourdelete/"+tourId+"");
        });
      });

      
      function submit() {
            alert("MESSAGE FROM TRAVEL SERVICE" + "\n" + "\n" + "New Tour was added Sucessfully");
          }

          function update() {
            alert("MESSAGE FROM TRAVEL SERVICE" + "\n" + "\n" + "Tours data was updated ");
          }

           
    </script>


